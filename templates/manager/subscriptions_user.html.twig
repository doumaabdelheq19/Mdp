{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Abonnements
{% endblock %}

{% block body %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="bg-dark">
        <div class="container">
            <div class="row align-items-center p-b-100 p-t-60">

                <div class="col-md-6 text-white p-b-30">
                    <div class="media">
                        <div class="avatar avatar mr-3">
                            <div class="avatar-title rounded-circle mdi mdi-book-outline">

                            </div>
                        </div>
                        <div class="media-body">
                            <h1>Gestion des abonnements<br/>{{ user.companyName }}</h1>
                            <h5>Accès au logiciel {% if has_active_subscription(user) %}<span class="badge badge-success">OUI</span>{% else %}<span class="badge badge-danger">NON</span>{% endif %}</h5>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-4 col-lg-3">
                    <a href="#" data-toggle="modal" data-target="#AddSubscriptionModal" class="card m-b-30">
                        <div class="card-body">
                            <div class="media">
                                <div class="avatar mr-3">
                                    <div class="avatar-title rounded-circle bg-primary"><i class="mdi mdi-shape-circle-plus"></i></div>
                                </div>
                                <div class="media-body p-t-5">
                                    <h5 class="m-b-0">Ajouter</h5>
                                    <p class="m-0">un abonnement</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid pull-up">
        <div class="row justify-content-md-end">

        </div>
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive p-t-10">
                            <table id="datatable" class="table" style="width:100%">
                                <thead>
                                <tr>
                                    <th>Date de création</th>
                                    <th>Offre souscrite</th>
                                    <th>Date démarrage</th>
                                    <th>Date de fin</th>
                                    <th>Prochaine facturation</th>
                                    <th>Facturation</th>
                                    <th>Accès</th>
                                    <th>État</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for subscription in subscriptions %}
                                    <tr>
                                        <td>{{ subscription.creationDate|date('d/m/Y') }}</td>
                                        <td>
                                            {% if subscription.type %}
                                                <span class="badge badge-info" data-toggle="tooltip" data-placement="top" data-original-title="{{ subscription.type.libelle }}">{{ subscription.type.code }}</span>
                                            {% else %}
                                                {{ subscription.offer }}
                                            {% endif %}
                                        </td>
                                        <td>{{ subscription.beginDate|date('d/m/Y') }}</td>
                                        <td>{{ subscription.endDate|date('d/m/Y') }}</td>
                                        <td>
                                            {% if subscription.paymentUntil %}
                                                {{ subscription.paymentUntil|date('d/m/Y') }}
                                            {% else %}
                                                -
                                            {% endif %}
                                            {% if subscription.active and (subscription.paymentUntil is null or subscription.paymentUntil < now) %}
                                                <br/><a href="{{ path('manager_subscriptions_user_payment', {'user': user.id, 'subscription': subscription.id}) }}" class="btn btn-sm ml-1 mr-1 btn-secondary" onclick="return confirm('Confirmer le renouvellement de cet abonnement ?');">
                                                    Renouveler
                                                </a>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if subscription.billingMonths %}
                                                {% if subscription.billingMonths == 12 %}
                                                    Annuelle
                                                {% elseif subscription.billingMonths == 3 %}
                                                    Trimestrielle
                                                {% else %}
                                                    Mensuelle
                                                {% endif %}
                                                - {{ subscription.unitBillingPrice }}€
                                            {% else %}
                                                {{ subscription.billing }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% set isActiveSubscription = is_active_subscription(user, subscription) %}
                                            {% if isActiveSubscription %}
                                                <span class="badge badge-success">OUI</span>
                                            {% else %}
                                                <span class="badge badge-danger">NON</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if not subscription.active %}
                                                <span class="badge badge-danger">Archivé</span>
                                            {% elseif isActiveSubscription %}
                                                <span class="badge badge-success">En cours</span>
                                            {% else %}
                                                <span class="badge badge-warning">Expiré</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if subscription.active %}
                                                <a href="{{ path('manager_subscriptions_user_disable', {'user': user.id, 'subscription': subscription.id}) }}" class="btn btn-sm ml-1 mr-1 btn-danger" onclick="return confirm('Confirmer la désactivation de cet abonnement ?');">
                                                    <i class="mdi mdi-close"></i>
                                                </a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="AddSubscriptionModal" tabindex="-1" role="dialog"
         aria-labelledby="AddSubscriptionModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Ajouter un abonnement</h5>
                    <button type="button" class="close" data-dismiss="modal"
                            aria-label="Fermer">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ form_start(form, {"attr": {"class": "needs-validation", "enctype": "multipart/form-data"}}) }}

                    <div class="form-row">
                        <div class="form-group col-12">
                            {{ form_label(form.type) }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-control ' ~ ((form_errors(form.type) == '') ? '' : 'is-invalid')} }) }}
                            <div class="invalid-feedback">{{ form_errors(form.type) | striptags  }}</div>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (function ($) {
            'use strict';
            $(document).ready(function () {
                $('#datatable').DataTable({
                    "language": {
                        "search": "Rechercher :",
                        "lengthMenu": "Afficher _MENU_ résultats par page",
                        "zeroRecords": "Aucun résultat",
                        "info": "Page _PAGE_ sur _PAGES_",
                        "infoEmpty": "Aucune données sur ce tableau",
                        "infoFiltered": "(filtered from _MAX_ total records)",
                        "paginate": {
                            "previous": "Précédent",
                            "next": "Suivant",

                        }
                    }
                });

            });

        })(window.jQuery);
    </script>
{% endblock %}