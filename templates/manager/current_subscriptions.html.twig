{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Abonnements
{% endblock %}

{% block body %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="bg-dark">
        <div class="container">
            <div class="row align-items-center p-b-100 p-t-60">

                <div class="col-md-6 text-white p-b-30">
                    <div class="media">
                        <div class="avatar avatar mr-3">
                            <div class="avatar-title rounded-circle mdi mdi-account-multiple  ">

                            </div>
                        </div>
                        <div class="media-body">
                            <h1>Abonnements</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid pull-up">
        <div class="row justify-content-md-end">

        </div>
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive p-t-10">
                            <table id="datatable" class="table" style="width:100%">
                                <thead>
                                <tr>
                                    <th>Société</th>
                                    <th>Offre souscrite</th>
                                    <th>Date démarrage</th>
                                    <th>Date de fin</th>
                                    <th>Prochaine facturation</th>
                                    <th>Facturation</th>
                                    <th>Accès</th>
                                    <th>État</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    {% set subscription = user.currentSubscription %}
                                    <tr>
                                        <td>
                                            {{ user.companyName }}
                                        </td>
                                        <td>
                                            {% if subscription %}
                                                {% if subscription.type %}
                                                    <span class="badge badge-info" data-toggle="tooltip" data-placement="top" data-original-title="{{ subscription.type.libelle }}">{{ subscription.type.code }}</span>
                                                {% else %}
                                                    {{ subscription.offer }}
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if subscription %}
                                                {{ subscription.beginDate|date('d/m/Y') }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if subscription %}
                                                {{ subscription.endDate|date('d/m/Y') }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if subscription %}
                                                {% if subscription.paymentUntil %}
                                                    {{ subscription.paymentUntil|date('d/m/Y') }}
                                                {% else %}
                                                    -
                                                {% endif %}
                                                {% if subscription.active and (subscription.paymentUntil is null or subscription.paymentUntil < now) %}
                                                    <br/><a href="{{ path('manager_subscriptions_user_payment', {'user': user.id, 'subscription': subscription.id}) }}" class="btn btn-sm ml-1 mr-1 btn-secondary" onclick="return confirm('Confirmer le renouvellement de cet abonnement ?');">
                                                    Renouveler
                                                </a>
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if subscription %}
                                                {% if subscription.billingMonths %}
                                                    {% if subscription.billingMonths == 12 %}
                                                        Annuelle
                                                    {% elseif subscription.billingMonths == 3 %}
                                                        Trimestrielle
                                                    {% else %}
                                                        Mensuelle
                                                    {% endif %}
                                                    - {{ subscription.unitBillingPrice }}€
                                                {% else %}
                                                    {{ subscription.billing }}
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if subscription %}
                                                {% set isActiveSubscription = is_active_subscription(user, subscription) %}
                                                {% if isActiveSubscription %}
                                                    <span class="badge badge-success">OUI</span>
                                                {% else %}
                                                    <span class="badge badge-danger">NON</span>
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if subscription %}
                                                {% if not subscription.active %}
                                                    <span class="badge badge-danger">Archivé</span>
                                                {% elseif isActiveSubscription %}
                                                    <span class="badge badge-success">En cours</span>
                                                {% else %}
                                                    <span class="badge badge-warning">Expiré</span>
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if subscription %}
                                                {% if subscription.active %}
                                                    <a href="{{ path('manager_subscriptions_user_disable', {'user': user.id, 'subscription': subscription.id}) }}" class="btn btn-sm ml-1 mr-1 btn-danger" onclick="return confirm('Confirmer la désactivation de cet abonnement ?');">
                                                        <i class="mdi mdi-close"></i>
                                                    </a>
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (function ($) {
            'use strict';
            $(document).ready(function () {
                $('#datatable').DataTable({
                    "language": {
                        "search": "Rechercher :",
                        "lengthMenu": "Afficher _MENU_ résultats par page",
                        "zeroRecords": "Aucun résultat",
                        "info": "Page _PAGE_ sur _PAGES_",
                        "infoEmpty": "Aucune données sur ce tableau",
                        "infoFiltered": "(filtered from _MAX_ total records)",
                        "paginate": {
                            "previous": "Précédent",
                            "next": "Suivant",

                        }
                    }
                });

            });

        })(window.jQuery);
    </script>
{% endblock %}