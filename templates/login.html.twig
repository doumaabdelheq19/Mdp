{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Connexion
{% endblock %}

{% block body_class %}login-page{% endblock %}

{% block body %}
<div class="logosidebar" style="border-bottom:0px; justify-content : flex-end;display:flex; margin:10px">
        <img src="{{ asset(logo_image) }}" alt="LOGO DATA SOLUTION" />
    </div>
    <div class="login">
    
        <div class="blockcenterlogin">
            
           
            
            {{ form_start(form, {"attr": {"class": "needs-validation"}}) }}
                <div>
                    <h2>Bienvenue</h2>
                    <p>Entrez vos coordonnées pour vous connecter</p>
                </div>
                
                <div class="inputlogin">
                    <h5>Adresse email</h5>
                    {{ form_widget(form.username, {'attr': {'class': 'inputt', 'placeholder': 'Exemple : votreemail@gmail.com'} }) }}
                    <div class="invalid-feedback">{{ form_errors(form.username) | striptags }}</div>
                </div>

                <div class="inputlogin">
                    <h5>Mot de passe</h5>
                    {{ form_widget(form.password, {'attr': {'class': 'inputt', 'placeholder': 'xxxxxx'} }) }}
                    <div class="invalid-feedback">{{ form_errors(form.password) | striptags }}</div>
                    <a href="{{ path('default_forgot_password') }}">Mot de passe oublié ?</a>
                </div>
                <br>
                 {% for type, messages in app.session.flashbag.all %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                        <div style="display:flex; gap:7px; ">
                           <i class="fa fa-exclamation-circle" aria-hidden="true" style="margin-top: 4px; color:#EF6D6F;"></i> {{ message }}
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
                <br>
                <button type="submit" class="submitt" style="width: 100%;">Se connecter</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
