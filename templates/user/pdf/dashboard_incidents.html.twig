<h5 style="text-align: center">{{ 'incidents_traiter'|trans }}</h5>
<table style="width:100%;font-size: 9px;" border="1" cellpadding="6">
    <thead>
    <tr style="background-color: #264465; color: white">
        <th>{{ 'cnil_informe'|trans }}</th>
        <th>{{ 'dlai_de_72h'|trans }}</th>
        <th>{{ 'nature'|trans }}</th>
        <th>{{ 'nbre_de_personnes'|trans }}</th>
        <th>{{ 'type_de_fichier'|trans }}</th>
        <th>{{ 'consquences'|trans }}</th>
        <th>{{ 'mesures_prises'|trans }}</th>
        <th>{{ 'date'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for incident in incidents %}
        <tr>
            <td>{% if incident.cnilInformed %}{{ 'oui'|trans }}{% else %}{{ 'non'|trans }}{% endif %}</td>
            <td>{% if incident.notice72H %}{{ 'oui'|trans }}{% else %}{{ 'non'|trans }}{% endif %}</td>
            <td>{{ incident.type }}</td>
            <td>{{ incident.peopleNumber }}</td>
            <td>{{ incident.fileType }}</td>
            <td>{{ incident.consequences }}</td>
            <td>{{ incident.takenMeasures }}</td>
            <td>{{ incident.date|date('d/m/Y') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
