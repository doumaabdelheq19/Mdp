{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Mot de passe oublié
{% endblock %}

{% block body_class %}forgot-password-page{% endblock %}

{% block body %}
<div class="logosidebar" style="border-bottom:0px; justify-content : flex-end; display:flex; margin:10px">
    <img src="{{ asset(logo_image) }}" alt="LOGO DATA SOLUTION" />
</div>
<div class="login">

    <div class="blockcenterlogin">

        {{ form_start(form, {"attr": {"class": "needs-validation"}}) }}
        <div>
            <h2>Mot de passe oublié</h2>
            <p>Entrez votre adresse email pour recevoir un lien de réinitialisation</p>
        </div>

        <div class="inputlogin">
            <h5>Adresse email</h5>
            {{ form_widget(form.email, {'attr': {'class': 'inputt', 'placeholder': 'Exemple : votreemail@gmail.com'} }) }}
            <div class="invalid-feedback">{{ form_errors(form.email) | striptags }}</div>
            <p class="small">Nous vous enverrons un lien de réinitialisation à l'adresse indiquée</p>
        </div>
        
        <br>
        {% for type, messages in app.session.flashbag.all %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                    <div style="display:flex; gap:7px;">
                        <i class="fa fa-exclamation-circle" aria-hidden="true" style="margin-top: 4px; color:#EF6D6F;"></i> {{ message }}
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
        <br>
        <button type="submit" class="submitt" style="width: 100%;">Envoyer</button>
        {{ form_end(form) }}

        <p class="text-center">
            <a href="{{ path('default_login') }}" class="text-underline">Annuler</a>
        </p>
    </div>
</div>
{% endblock %}
